<div class="container-narrow notification" style="padding-top: 30px;">

  <div class="hero-unit">
    <div class="notification-text"><%= @notification.html %></div>
    <div class="date"><%= @notification.created_at.strftime('%Y-%m-%d %H:%M %z') %></div>
  </div>

  <div class="links">
    <h3>Webmentions</h3>
    <table class="webmentions">
      <tr class="head">
        <th>source</th>
        <th>target</th>
      </tr>
      <% @webmentions.each do |link| %>
        <tr>
          <td><a href="<%= link.href %>"><%= link.href %></a></td>
          <td><a href="<%= link.page.href %>"><%= link.page.href %></a></td>
        </tr>
      <% end %>
    </table>
  </div>

</div><!-- container -->
<style type="text/css">
  .notification .notification-text {

  }
  .notification .date {
    text-align: right;
    font-size: 0.8em;
  }
  .notification .links {
    padding: 0 60px;
  }
  .notification h3 {
    font-size: 20px;
    margin: 0;
  }
  .webmentions {
    width: 100%;
  }
  .webmentions td {
    width: 50%;
    text-overflow: ellipsis;
  }
  .webmentions tr:nth-child(even) {
    background-color: #fff;
  }
  .webmentions tr:nth-child(odd) {
    background-color: #eee;
  }
  .webmentions tr.head {
    background-color: transparent;
    text-align: left;
  }
</style>
